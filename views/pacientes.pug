extends ./layout/index

block contenido
    main.container.mt-5 
        h1= pagina

        h3.text-center Nuestros Pacientes
        
        .row.doctores
            
            each paciente in pacientes      
                .col-md-6.col-lg-4.mb2
                    .card 
                        .card-body
                            blockquote.blockquote
                                p.mb-0
                                    h6 Nombres: #{JSON.stringify(paciente.nombres)}
                                    h6 Apellidos: #{JSON.stringify(paciente.apellidos)}
                                    h6 Documento: #{JSON.stringify(paciente.documento)}
                                    h6 Especialidad: #{JSON.stringify(paciente.especialidad)}
                                    h6 Edad: #{JSON.stringify(paciente.edad)}
                                    h6 Teléfono: #{JSON.stringify(paciente.telefono)}
                                footer.blockquote-footer
                                    h6 Paciente: #{JSON.stringify(paciente.nombres)}  

        .row.mt-5
            .col-md-5 
                img(src="img/pacientes.jpg", width='400px',class="img-fluid")
            .col-md-7           
                form(action="/pacientes" method="POST") 
                        .form-group 
                            label(for="nombres") Nombre 
                            input#nombre(type="text", placeholder="Nombre", name="nombres", class="form-control", required) 

                        .form-group 
                            label(for="apellidos") Apellido
                            input#nombre(type="text", placeholder="Apellido", name="apellidos", class="form-control", required)

                        .form-group 
                            label(for="id_numeroCedula") Documento de identidad 
                            input#nombre(type="text", placeholder="Documento", name="id_numeroCedula", class="form-control", required) 

                        .form-group 
                            label(for="edad") Edad 
                            input#nombre(type="text", placeholder="Edad", name="edad", class="form-control", required)
                            
                        .form-group 
                            label(for="especialidad") Especialidad 
                            <select class="form-control form-control" name="especialidad"  >
                                <option>Especialidad</option>
                                <option>Medicina General</option>
                                <option>Medicina Interna</option>
                                <option>Dermatología</option>
                                <option>Rehabilitación física</option>
                                <option>Psicología</option>
                                <option>Odontología</option>
                                <option>Radiología</option>
                            </select>
                        
                        .form-group 
                            label(for="email") Teléfono 
                            input#nombre(type="text", placeholder="Teléfono", name="telefono", class="form-control", required) 
                        
                        input.btn.btn-success.btn-block(type="submit")
                        




