extends ./layout/index

block contenido
    main.container.mt-5 
        h1= pagina

        .col-md-12
            if(errores)
                each error in errores
                    .alert.col.alert-danger.text-center=error.mensaje


        .row 
            .col-md-5 
                img(src="img/img1.jpg", width='400px',class="img-fluid")
            .col-md-7
                form(action="/" method="POST") 
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Nombre", name="nombres", class="form-control", value=nombres) 

                        .form-group 
                            label(for="correo") Apellido
                            input#nombre(type="text", placeholder="Apellido", name="apellidos", class="form-control",value=apellidos )

                        .form-group 
                            label(for="especialidad") Especialidad 
                            <select class="form-control form-control" name="especialidad"  >
                                <option>Especialidad</option>
                                <option>Medicina General</option>
                                <option>Medicina Interna</option>
                                <option>Dermatología</option>
                                <option>Rehabilitación física</option>
                                <option>Psicología</option>
                                <option>Odontología</option>
                                <option>Radiología</option>
                            </select>

                        .form-group 
                            label(for="correo") Consultorio 
                            input#nombre(type="text", placeholder="Consultorio", name="consultorio", class="form-control",value=consultorio) 

                        .form-group 
                            label(for="correo") Email 
                            input#nombre(type="text", placeholder="Email", name="email", class="form-control",value=email) 
                        
                        input.btn.btn-success.btn-block(type="submit")
                        





                